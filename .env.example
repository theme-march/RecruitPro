# GEMINI_API_KEY: Required for Gemini AI API calls.
# AI Studio automatically injects this at runtime from user secrets.
# Users configure this via the Secrets panel in the AI Studio UI.
GEMINI_API_KEY="MY_GEMINI_API_KEY"

# APP_URL: The URL where this applet is hosted.
# AI Studio automatically injects this at runtime with the Cloud Run service URL.
# Used for self-referential links, OAuth callbacks, and API endpoints.
APP_URL="MY_APP_URL"

# SSLCommerz (Demo)
SSL_STORE_ID="project_store_id"
SSL_STORE_PASSWORD="project_store_password"
SSL_IS_SANDBOX=true



# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=manpower_recruitment_db
DB_PORT=3306

# JWT Secret (Change this in production!)
JWT_SECRET=your-secret-key-here-please-change-this-in-production-12345

# Server Configuration
PORT=3000
NODE_ENV=development

# SSLCommerz Configuration (Optional - Add when needed)
# SSLCOMMERZ_STORE_ID=your_store_id
# SSLCOMMERZ_STORE_PASSWORD=your_store_password
# SSLCOMMERZ_IS_LIVE=false